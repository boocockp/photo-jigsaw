{
  "id": "project_1",
  "name": "Photo Jigsaw",
  "properties": {},
  "elements": [
    {
      "id": "app_1",
      "name": "Main App",
      "properties": {},
      "elements": [
        {
          "id": "page_1",
          "name": "Main Page",
          "properties": {},
          "elements": [
            {
              "id": "text_1",
              "name": "Title",
              "properties": {
                "content": "Photo Jigsaw",
                "styles": {
                  "fontSize": 24,
                  "fontFamily": "Impact",
                  "color": "Orange",
                  "letterSpacing": "2px"
                }
              },
              "kind": "Text"
            },
            {
              "id": "data_2",
              "name": "Width",
              "properties": {
                "initialValue": {
                  "expr": "5"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_3",
              "name": "Height",
              "properties": {
                "initialValue": "5"
              },
              "kind": "Data"
            },
            {
              "id": "data_6",
              "name": "Time Limit",
              "properties": {
                "initialValue": {
                  "expr": "180"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_1",
              "name": "Pieces",
              "properties": {
                "initialValue": {
                  "expr": "Range(0, Width * Height - 1)"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_4",
              "name": "Selected Piece",
              "properties": {
                "initialValue": {
                  "expr": "null"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_5",
              "name": "Moves",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "calculation_1",
              "name": "Number Correct",
              "properties": {
                "calculation": {
                  "expr": "Count(Pieces, $item == $index)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_2",
              "name": "All Correct",
              "properties": {
                "calculation": {
                  "expr": "Eq(NumberCorrect, Count(Pieces))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_3",
              "name": "Game Over",
              "properties": {
                "calculation": {
                  "expr": "Or(GameTimer.isFinished , AllCorrect)"
                },
                "whenTrueAction": {
                  "expr": "Log('Game over!')\nGameTimer.Stop()"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "timer_1",
              "name": "Game Timer",
              "properties": {
                "label": "Time",
                "interval": 1,
                "period": {
                  "expr": "TimeLimit"
                },
                "show": false
              },
              "kind": "Timer"
            },
            {
              "id": "function_1",
              "name": "Swap Selected",
              "properties": {
                "calculation": {
                  "expr": "let piece1 = ItemAt(Pieces, SelectedPiece)\nlet piece2 = ItemAt(Pieces, selected2)\nUpdate(Pieces, {[SelectedPiece.value]: piece2, [selected2]: piece1})\nReset(SelectedPiece)\nSet(Moves, Moves + 1)\nCheckScores()"
                },
                "input1": "selected2"
              },
              "kind": "Function"
            },
            {
              "id": "function_2",
              "name": "Check Scores",
              "properties": {
                "calculation": {
                  "expr": "If(AllCorrect, GameTimer.Stop())"
                }
              },
              "kind": "Function"
            },
            {
              "id": "image_1",
              "name": "Image 1",
              "properties": {
                "source": "Car1.jpg",
                "show": false
              },
              "kind": "Image"
            },
            {
              "id": "button_1",
              "name": "Start",
              "properties": {
                "action": {
                  "expr": "Set(Pieces, Shuffle(Range(0, Width * Height - 1)))\nReset(Moves)\nGameTimer.Reset()\nGameTimer.Start()"
                }
              },
              "kind": "Button"
            },
            {
              "id": "layout_2",
              "name": "Status Line",
              "properties": {
                "horizontal": true,
                "styles": {
                  "fontSize": "20px"
                }
              },
              "elements": [
                {
                  "id": "text_2",
                  "name": "Moves Taken",
                  "properties": {
                    "content": {
                      "expr": "\"Moves: \" +  Moves"
                    },
                    "styles": {
                      "fontSize": "inherit"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_3",
                  "name": "Time Left",
                  "properties": {
                    "content": {
                      "expr": "\"Remaining: \" + Ceiling(TimeLimit - GameTimer.value) + \" seconds\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "marginLeft": "6em"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Layout"
            },
            {
              "id": "layout_1",
              "name": "Layout 1",
              "properties": {
                "horizontal": true,
                "wrap": true,
                "styles": {
                  "width": "530",
                  "height": "515",
                  "gap": "0"
                }
              },
              "elements": [
                {
                  "id": "itemset_1",
                  "name": "Chunks",
                  "properties": {
                    "items": {
                      "expr": "Pieces"
                    },
                    "selectable": "none",
                    "selectAction": {
                      "expr": "Log('select', $item, $itemId)\nIf(IsNull(SelectedPiece), Set(SelectedPiece, $itemId), SwapSelected($itemId))\n"
                    }
                  },
                  "elements": [
                    {
                      "id": "block_2",
                      "name": "Chunk Wrapper",
                      "properties": {
                        "styles": {
                          "height": "100",
                          "width": "100",
                          "borderColor": {
                            "expr": "If(Eq($itemId, SelectedPiece), 'orange', 'transparent')"
                          },
                          "borderStyle": "solid",
                          "borderWidth": "3"
                        }
                      },
                      "elements": [
                        {
                          "id": "icon_1",
                          "name": "Ok Indicator",
                          "properties": {
                            "iconName": "check",
                            "styles": {
                              "color": "green",
                              "backgroundColor": "white",
                              "position": "absolute",
                              "zIndex": 1,
                              "bottom": "0",
                              "right": "0",
                              "fontSize": "16",
                              "borderRadius": "50%"
                            },
                            "show": {
                              "expr": "Eq($item, $itemId)"
                            }
                          },
                          "kind": "Icon"
                        },
                        {
                          "id": "block_3",
                          "name": "Image Chunk",
                          "properties": {
                            "styles": {
                              "backgroundImage": {
                                "expr": "'url(' + FileUrl('Car1.jpg') + ')'"
                              },
                              "height": "100",
                              "width": "100",
                              "backgroundColor": "lightgray",
                              "backgroundPositionX": {
                                "expr": "-($item % Width) * 100 + 'px'"
                              },
                              "backgroundPositionY": {
                                "expr": "-Floor($item / Width) * 100 + 'px'"
                              }
                            }
                          },
                          "kind": "Block"
                        }
                      ],
                      "kind": "Block"
                    }
                  ],
                  "kind": "ItemSet"
                }
              ],
              "kind": "Layout"
            }
          ],
          "kind": "Page"
        }
      ],
      "kind": "App"
    },
    {
      "id": "_TOOLS",
      "name": "Tools",
      "properties": {},
      "kind": "ToolFolder"
    },
    {
      "id": "_COMPONENTS",
      "name": "Components",
      "properties": {},
      "kind": "ComponentFolder"
    }
  ],
  "kind": "Project"
}