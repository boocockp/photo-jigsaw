{
  "id": "project_1",
  "name": "Photo Jigsaw",
  "properties": {},
  "elements": [
    {
      "id": "app_1",
      "name": "Photo Jigsaw",
      "properties": {
        "maxWidth": "500px"
      },
      "elements": [
        {
          "id": "page_1",
          "name": "Main Page",
          "properties": {},
          "elements": [
            {
              "id": "data_7",
              "name": "Status",
              "properties": {
                "initialValue": {
                  "expr": "'Ready'"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_8",
              "name": "Score",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_9",
              "name": "Round Skipped",
              "properties": {
                "initialValue": {
                  "expr": "false"
                }
              },
              "kind": "Data"
            },
            {
              "id": "calculation_4",
              "name": "Is Round Won",
              "properties": {
                "calculation": {
                  "expr": "Eq(NumberCorrect, NumberOfPieces)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_5",
              "name": "Is Round Failed",
              "properties": {
                "calculation": {
                  "expr": "Eq(MovesRemaining, 0)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_6",
              "name": "When Round Complete",
              "properties": {
                "calculation": {
                  "expr": "IsRoundComplete"
                },
                "whenTrueAction": {
                  "expr": "EndRound()"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_7",
              "name": "Is Round Complete",
              "properties": {
                "calculation": {
                  "expr": "Or(IsRoundWon, IsRoundFailed, RoundSkipped, Not(GameRunning))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_8",
              "name": "Round In Play",
              "properties": {
                "calculation": {
                  "expr": "Not(IsRoundComplete)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_9",
              "name": "Moves Remaining",
              "properties": {
                "show": false,
                "calculation": {
                  "expr": "Max(MovesAllowed - Moves, 0)"
                }
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_10",
              "name": "Game Running",
              "properties": {
                "calculation": {
                  "expr": "Or(Status == 'Playing', Status == 'Paused')"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "timer_2",
              "name": "Game Timer",
              "properties": {
                "period": {
                  "expr": "TimeLimit"
                },
                "interval": 1,
                "show": false,
                "endAction": {
                  "expr": "EndGame()"
                }
              },
              "kind": "Timer"
            },
            {
              "id": "function_3",
              "name": "Setup New Round",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Picture, GetNextPicture())\nSet(Pieces, Shuffle(Range(0, Width * Height - 1)))\nReset(Moves, ShowPuzzle)\n"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_4",
              "name": "Start New Game",
              "properties": {
                "calculation": {
                  "expr": "Reset(Score)\nReset(GameTimer)\nSet(Status, 'Playing')\nStartNewRound()\nGameTimer.Start()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_5",
              "name": "Start New Round",
              "properties": {
                "calculation": {
                  "expr": "Reset(RoundSkipped)\nSetupNewRound()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_6",
              "name": "End Round",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Score, Score + Points())\nIf(RoundSkipped, StartNewRound())"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_7",
              "name": "End Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Ended')"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_8",
              "name": "Pause Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Paused')\nGameTimer.Stop()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_9",
              "name": "Continue Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Playing')\nGameTimer.Start()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "text_1",
              "name": "Title",
              "properties": {
                "content": "Photo Jigsaw",
                "styles": {
                  "fontSize": 24,
                  "fontFamily": "Impact",
                  "color": "Orange",
                  "letterSpacing": "2px"
                }
              },
              "kind": "Text"
            },
            {
              "id": "data_2",
              "name": "Width",
              "properties": {
                "initialValue": {
                  "expr": "5"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_3",
              "name": "Height",
              "properties": {
                "initialValue": "5"
              },
              "kind": "Data"
            },
            {
              "id": "calculation_11",
              "name": "Number Of Pieces",
              "properties": {
                "calculation": {
                  "expr": "Width * Height"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_12",
              "name": "Moves Allowed",
              "properties": {
                "calculation": {
                  "expr": "50"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_15",
              "name": "Points Per Piece",
              "properties": {
                "calculation": {
                  "expr": "2"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_13",
              "name": "Picture Names",
              "properties": {
                "calculation": {
                  "expr": "['Car1.jpg', 'car2.jpg', 'city1.jpg', 'cocktails.jpg', 'coffee1.jpg', 'icecream.jpg', 'mountains1.jpg', 'mountains2.jpg', 'mountains3.jpg', 'whitehelmet.jpg']"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "data_12",
              "name": "Pictures Used",
              "properties": {
                "initialValue": {
                  "expr": "[]"
                }
              },
              "kind": "Data"
            },
            {
              "id": "function_11",
              "name": "Get Next Picture",
              "properties": {
                "calculation": {
                  "expr": "let picsAvail = WithoutItems(PictureNames, PicturesUsed)\nlet picsToChoose = If(Len(picsAvail) > 0, picsAvail, PictureNames)\nlet pic = RandomFrom(picsToChoose)\nSet(PicturesUsed, FlatList(PicturesUsed, pic))\npic"
                }
              },
              "kind": "Function"
            },
            {
              "id": "data_6",
              "name": "Time Limit",
              "properties": {
                "initialValue": {
                  "expr": "180"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_11",
              "name": "Picture",
              "properties": {},
              "kind": "Data"
            },
            {
              "id": "calculation_14",
              "name": "Picture Url",
              "properties": {
                "calculation": {
                  "expr": "`url(${FileUrl(Picture)})` "
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "data_1",
              "name": "Pieces",
              "properties": {
                "initialValue": {
                  "expr": "Range(0, Width * Height - 1)"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_4",
              "name": "Selected Piece",
              "properties": {
                "initialValue": {
                  "expr": "null"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_10",
              "name": "Show Puzzle",
              "properties": {
                "initialValue": {
                  "expr": "false"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_5",
              "name": "Moves",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "calculation_1",
              "name": "Number Correct",
              "properties": {
                "calculation": {
                  "expr": "Count(Pieces, $item == $index)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "function_10",
              "name": "Points",
              "properties": {
                "calculation": {
                  "expr": "let points = NumberCorrect * PointsPerPiece\nlet bonus = If(IsRoundWon, points, 0)\npoints + bonus"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_1",
              "name": "Swap Selected",
              "properties": {
                "calculation": {
                  "expr": "let piece1 = ItemAt(Pieces, SelectedPiece)\nlet piece2 = ItemAt(Pieces, selected2)\nUpdate(Pieces, {[SelectedPiece.value]: piece2, [selected2]: piece1})\nReset(SelectedPiece)\nSet(Moves, Moves + 1)"
                },
                "input1": "selected2"
              },
              "kind": "Function"
            },
            {
              "id": "dialog_1",
              "name": "Instructions",
              "properties": {
                "initiallyOpen": false,
                "layout": "vertical",
                "showCloseButton": true,
                "styles": {
                  "padding": "2em"
                }
              },
              "elements": [
                {
                  "id": "text_5",
                  "name": "Instructions Text",
                  "properties": {
                    "content": {
                      "expr": "`Move the jumbled pieces of a picture into the correct positions.\n\n\nStudy the original first - but not too long, the timer is running.  Then click Show Puzzle to start.  You can click Show Original later to switch between the two.\n\n\nClick on two pieces one after the other to swap their positions. You have up to ${MovesAllowed} moves on a picture.\n\n\nWhen a piece is in the right position, there is a little tick mark in the corner.\n\n\nYou score ${PointsPerPiece} points for each piece in the right position (tick in the corner) , and double if you get them all correct.\n\n\nIf you get stuck and want to try another picture, click Skip this picture - you keep any points you have.\n\n\nYou have 3 minutes - and if you finish the first one, click New Picture to start another.\n`"
                    },
                    "allowHtml": true
                  },
                  "kind": "Text"
                },
                {
                  "id": "button_2",
                  "name": "Start Game 2",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()\nInstructions.Close()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "content": "Start Game",
                    "appearance": "filled"
                  },
                  "kind": "Button"
                }
              ],
              "kind": "Dialog"
            },
            {
              "id": "block_6",
              "name": "Stats Layout",
              "properties": {
                "layout": "horizontal wrapped",
                "styles": {
                  "fontSize": "24",
                  "justifyContent": "space-between",
                  "width": "100%"
                }
              },
              "elements": [
                {
                  "id": "text_6",
                  "name": "Score Display",
                  "properties": {
                    "content": {
                      "expr": "\"Total points \" + Score"
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "blue"
                    },
                    "show": {
                      "expr": "Or(GameRunning, Status == 'Ended')"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_7",
                  "name": "Time Display",
                  "properties": {
                    "content": {
                      "expr": "Ceiling(GameTimer. remainingTime) + \"s left\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "green"
                    },
                    "show": {
                      "expr": "GameRunning"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_8",
                  "name": "Game Over",
                  "properties": {
                    "content": "Game Over",
                    "styles": {
                      "fontSize": "inherit",
                      "color": "white",
                      "backgroundColor": "green",
                      "padding": "0 0.5em",
                      "borderRadius": "8px"
                    },
                    "show": {
                      "expr": "Status == 'Ended'"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_7",
              "name": "Ready Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Ready'"
                },
                "styles": {
                  "padding": "0"
                }
              },
              "elements": [
                {
                  "id": "text_9",
                  "name": "Title",
                  "properties": {
                    "content": "Welcome!",
                    "styles": {
                      "color": "#039a03",
                      "fontFamily": "Chelsea Market",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_10",
                  "name": "Ready Text",
                  "properties": {
                    "content": "Move the chunks of a picture into the right positions.\n\nView the original, then click Show Puzzle to start.\n\nClick on two squares to swap them.\n\nClick Instructions for full details\n\nOr Start Game to dive straight in!",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_12",
              "name": "Play Panel",
              "properties": {
                "layout": "vertical",
                "show": {
                  "expr": "Or(Status == 'Playing', Status == 'Ended')"
                },
                "styles": {
                  "width": "100%",
                  "padding": "0",
                  "position": "relative",
                  "maxWidth": "400px"
                }
              },
              "elements": [
                {
                  "id": "block_16",
                  "name": "Photo Grid",
                  "properties": {
                    "styles": {
                      "width": "100%",
                      "maxWidth": "500px",
                      "aspectRatio": {
                        "expr": "Width / Height"
                      },
                      "border": "1px solid gray",
                      "gap": "0"
                    },
                    "layout": "horizontal wrapped",
                    "show": {
                      "expr": "ShowPuzzle"
                    }
                  },
                  "elements": [
                    {
                      "id": "itemset_4",
                      "name": "Chunks",
                      "properties": {
                        "items": {
                          "expr": "Pieces"
                        },
                        "selectable": "none",
                        "selectAction": {
                          "expr": "If(RoundInPlay, If(IsNull(SelectedPiece), Set(SelectedPiece, $itemId), SwapSelected($itemId)))\n"
                        },
                        "itemStyles": {
                          "borderColor": {
                            "expr": "If(Eq($itemId, SelectedPiece), 'orange', 'transparent')"
                          },
                          "width": {
                            "expr": "100 / Width + '%'"
                          },
                          "aspectRatio": "1",
                          "boxSizing": "border-box",
                          "borderStyle": "solid",
                          "borderWidth": "2",
                          "position": "relative"
                        }
                      },
                      "elements": [
                        {
                          "id": "block_15",
                          "name": "Image Chunk",
                          "properties": {
                            "styles": {
                              "backgroundImage": {
                                "expr": "PictureUrl"
                              },
                              "height": "100%",
                              "width": "100%",
                              "backgroundColor": "lightgray",
                              "backgroundPositionX": {
                                "expr": "-($item % Width) * 100 + '%'"
                              },
                              "backgroundPositionY": {
                                "expr": "-Floor($item / Width) * 100 + '%'"
                              },
                              "backgroundSize": {
                                "expr": "Width * 100 + '%'"
                              }
                            }
                          },
                          "kind": "Block"
                        },
                        {
                          "id": "icon_4",
                          "name": "Ok Indicator",
                          "properties": {
                            "iconName": "check",
                            "styles": {
                              "color": "green",
                              "backgroundColor": "white",
                              "position": "absolute",
                              "bottom": "0",
                              "right": "0",
                              "fontSize": "16",
                              "borderRadius": "50%"
                            },
                            "show": {
                              "expr": "Eq($item, $itemId)"
                            }
                          },
                          "kind": "Icon"
                        }
                      ],
                      "kind": "ItemSet"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_18",
                  "name": "Photo Original",
                  "properties": {
                    "styles": {
                      "width": "100%",
                      "maxWidth": "500px",
                      "aspectRatio": {
                        "expr": "Width / Height"
                      },
                      "border": "1px solid gray",
                      "backgroundImage": {
                        "expr": "PictureUrl"
                      },
                      "backgroundSize": "cover"
                    },
                    "layout": "none",
                    "show": {
                      "expr": "Not(ShowPuzzle)"
                    }
                  },
                  "elements": [],
                  "kind": "Block"
                },
                {
                  "id": "block_9",
                  "name": "Round Status Block",
                  "properties": {
                    "layout": "horizontal"
                  },
                  "elements": [
                    {
                      "id": "text_12",
                      "name": "Round In Progress",
                      "properties": {
                        "content": {
                          "expr": "'Points so far ' + Points() + ' &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Moves remaining ' + MovesRemaining"
                        },
                        "show": {
                          "expr": "RoundInPlay"
                        },
                        "allowHtml": true
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_13",
                      "name": "Round Won",
                      "properties": {
                        "content": {
                          "expr": "'All correct! ' + Points() + ' points added'"
                        },
                        "show": {
                          "expr": "IsRoundWon"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_14",
                      "name": "Round Failed",
                      "properties": {
                        "content": {
                          "expr": "'Sorry - no moves left' "
                        },
                        "show": {
                          "expr": "IsRoundFailed"
                        },
                        "allowHtml": false
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_15",
                      "name": "Round Skipped",
                      "properties": {
                        "content": {
                          "expr": "'Picture skipped - ' + Points() + ' points'"
                        },
                        "show": {
                          "expr": "RoundSkipped"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "button_3",
                      "name": "New Round",
                      "properties": {
                        "action": {
                          "expr": "StartNewRound()"
                        },
                        "show": {
                          "expr": "Status == 'Playing' && IsRoundComplete"
                        },
                        "content": "New Picture",
                        "appearance": "filled"
                      },
                      "kind": "Button"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_10",
                  "name": "Ended Panel",
                  "properties": {
                    "show": {
                      "expr": "Status == 'Ended'"
                    },
                    "styles": {
                      "position": "absolute",
                      "left": "50%",
                      "translate": "-50% -50%",
                      "top": "50%",
                      "backgroundColor": "lightblue",
                      "padding": "1em",
                      "borderRadius": "10px",
                      "border": "2px solid blue",
                      "opacity": "1",
                      "minWidth": "20em"
                    }
                  },
                  "elements": [
                    {
                      "id": "text_16",
                      "name": "Title",
                      "properties": {
                        "content": "Congratulations!",
                        "styles": {
                          "fontFamily": "fantasy, Arial",
                          "fontSize": "28",
                          "color": "#039a03"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_17",
                      "name": "Score",
                      "properties": {
                        "content": {
                          "expr": "'You have scored ' + Score + ' points!'"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_18",
                      "name": "What next",
                      "properties": {
                        "content": "Click Start Game to have another go"
                      },
                      "kind": "Text"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_11",
                  "name": "Round Controls",
                  "properties": {
                    "layout": "horizontal",
                    "styles": {
                      "justifyContent": "space-between",
                      "width": "100%"
                    }
                  },
                  "elements": [
                    {
                      "id": "button_11",
                      "name": "Show Puzzle",
                      "properties": {
                        "action": {
                          "expr": "Set(ShowPuzzle, true)"
                        },
                        "show": {
                          "expr": "Not(ShowPuzzle)"
                        },
                        "appearance": "filled"
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_10",
                      "name": "Show Original",
                      "properties": {
                        "action": {
                          "expr": "Set(ShowPuzzle, false)"
                        },
                        "show": {
                          "expr": "ShowPuzzle"
                        }
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_4",
                      "name": "Skip Round",
                      "properties": {
                        "action": {
                          "expr": "Set(RoundSkipped, true)\n"
                        },
                        "show": {
                          "expr": "RoundInPlay"
                        },
                        "content": "Skip this picture"
                      },
                      "kind": "Button"
                    }
                  ],
                  "kind": "Block"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_13",
              "name": "Pause Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Paused'"
                },
                "styles": {
                  "padding": "0"
                }
              },
              "elements": [
                {
                  "id": "text_19",
                  "name": "Title",
                  "properties": {
                    "content": "Paused...",
                    "styles": {
                      "color": "#7529df",
                      "fontFamily": "Luckiest Guy",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_20",
                  "name": "Pause Text",
                  "properties": {
                    "content": "Click Continue Game to carry on",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_14",
              "name": "Game Controls",
              "properties": {
                "layout": "horizontal",
                "styles": {
                  "paddingTop": "20px"
                }
              },
              "elements": [
                {
                  "id": "button_5",
                  "name": "Start Game",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "appearance": "filled"
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_6",
                  "name": "Stop Game",
                  "properties": {
                    "action": {
                      "expr": "EndGame()"
                    },
                    "show": {
                      "expr": "GameRunning"
                    }
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_7",
                  "name": "Pause Game",
                  "properties": {
                    "action": {
                      "expr": "PauseGame()"
                    },
